---
import HomeLayout from "../../layouts/HomeLayout.astro";
import { WriteForm } from "../../components/WriteForm";
import "../../styles/WriteForm.scss";
---

<HomeLayout
  title="Write a Paper"
  description="Submit your own casual research paper!"
>
  <section id="write">
    <header class="header">
      <h1 class="header-title">Write a Paper</h1>
      <p class="header-description">
        Share your thoughts and ideas by submitting a casual research paper.
      </p>
    </header>
    <article class="article">
      <WriteForm client:load />
    </article>
  </section>
</HomeLayout>

<style lang="scss">
  #write {
    padding: 20px;
    margin: 20px auto;
    max-width: 800px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

    .header {
      margin-bottom: 2rem;
      text-align: center;

      .header-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 0.5rem;
      }

      .header-description {
        font-size: 1rem;
        color: #4b5563;
      }
    }

    .article {
      font-family: Georgia, serif;
      font-size: 1rem;
      color: #374151;
      line-height: 1.75;
    }
  }
</style>
