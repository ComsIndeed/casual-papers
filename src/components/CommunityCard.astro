<script>
  console.log("RAN");
  if (
    localStorage.getItem(
      "communityCardDismissed_bad3a90b-417f-4385-ae9f-245870e4abb4"
    ) != "true"
  ) {
    document.getElementById("community-card")!.style.display = "block";
    document
      .getElementById("homepage-info-post-button")!
      .addEventListener("click", function () {
        window.location.href = "/write";
      });
    document
      .getElementById("homepage-info-discard-button")!
      .addEventListener("click", function () {
        const card = document.getElementById("community-card");
        if (card) card.style.display = "none";
        // Optionally, you can store a flag in localStorage to remember the dismissal
        localStorage.setItem(
          "communityCardDismissed_bad3a90b-417f-4385-ae9f-245870e4abb4",
          "true"
        );
      });
  }
</script>

