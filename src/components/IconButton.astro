---
import { Icon } from "astro-icon/components";

export interface Props {
  icon: string; // The name of your SVG file (e.g., "home" for home.svg)
  id?: string;
  label: string; // Accessible label for the button
  href?: string; // Optional link for a navigation button
  onClick?: () => void; // Optional click handler for a regular button
}

const { icon, label, href, id } = Astro.props;
---

{
  href ? (
    <a href={href} aria-label={label} class="icon-button">
      <Icon name={icon} />
    </a>
  ) : (
    <button type="button" id={id} aria-label={label} class="icon-button">
      <Icon name={icon} />
    </button>
  )
}

<style>
  .icon-button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem;
    border: none;
    background: transparent;
    cursor: pointer;
    /* Basic styling, customize as needed */
  }
  .icon-button :global(svg) {
    width: 1.5rem; /* Adjust size as needed */
    height: 1.5rem;
    fill: currentColor; /* Allows coloring the SVG with text color */
  }
</style>
